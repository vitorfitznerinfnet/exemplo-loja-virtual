@model List<LojaVirtual.Models.Produto>
@{
    var listaDeProdutos = Model;
}

<h3>Lista de produtos</h3>

<form action="/produtos/listar" method="get">
    <input type="text" name="pesquisa" placeholder="Pesquisa" />
    <input type="submit" value="Pesquisar" />
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col"><a href="/produtos/listar?ordenarpelonome=asc">Nome</a></th>
            <th scope="col">Preço</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in listaDeProdutos)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>@produto.Preco</td>
                <td>
                    <a href="/produtos/editar?identificador=@produto.Id">Editar</a> / 
                    <a href="/produtos/excluir?identificador=@produto.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>